@page
@model CustomerForm.Pages.Customers.ContactFormModel
@{
}
<link rel="stylesheet" href="~/css/style.css" asp-append-version="true" />


<div >

    <form id="form" class="form" method="post">
        <fieldset><legend>Contact form</legend>
            <input type="hidden" asp-for="Customer.Id" />

          <p>

            <label asp-for="Customer.FirstName">First name:</label><br>
            <input asp-for="Customer.FirstName"  class="input_field"  id="fname"  ><br>
           <span class="text-danger" asp-validation-for="Customer.FirstName"></span> 
          </p>

          <p>  
            <label asp-for="Customer.LastName">Last name:</label><br>
            <input asp-for="Customer.LastName"  class="input_field" id="lname"  ><br>
           <span class="text-danger" asp-validation-for="Customer.LastName"></span> 
          </p>
          <p>
            <label asp-for="Customer.Email">Email:</label><br>
            <input asp-for="Customer.Email"  class="input_field" id="email"  ><br>
           <span class="text-danger" asp-validation-for="Customer.Email"></span> 
          </p>
          <p>
            <label asp-for="Customer.Gender">Gender:</label><br>
            <select asp-for="Customer.Gender" id="gender">
              <option value="Male">Male</option>
              <option value="Female">Female</option>
            </select>
          </p>
          <p>
            <label asp-for="Customer.Country">Choose a country:</label>
            <select asp-for="Customer.Country" onchange="getCities(this.value)" id="country-select">
              <option value="">Choose a country:</option>
            </select>
           <span class="text-danger" asp-validation-for="Customer.Country"></span>
          </p>
          <p>
            <label asp-for="Customer.City">Choose a city:</label>
            <select asp-for="Customer.City"  id="cities" disabled>
              <option value="">Choose a city:</option>
            </select>
           <span class="text-danger" asp-validation-for="Customer.City"></span>
          </p>
          <p>
            <label asp-for="Customer.Phone">Phone:</label><br>
            <input asp-for="Customer.Phone" id="phone"> <br>
            <span class="text-danger" asp-validation-for="Customer.Phone"></span> 
          </p>
          <p>
            <label asp-for="Customer.Price">Price:</label><br>
            <input asp-for="Customer.Price" id="price"><br>
            <span class="text-danger" asp-validation-for="Customer.Price"></span> 
          </p>
          <p>
            <label asp-for="Customer.Birthday">Date of Birth:</label><br>
            <input asp-for="Customer.Birthday" type="date" id="b_date"><br>

          </p>
          <button id="submit" type="submit" class="btn" value="Submit">Submit</button>
          <div id="error-message"></div>
        </fieldset>  
      </form> 
  </div>

 @section Scripts{
<partial name="_ValidationScriptsPartial"/>
} 

